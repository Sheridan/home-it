[Unit]
Description=nftables firewall service
After=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/local/bin/firewall-manager.sh start
ExecStop=/usr/local/bin/firewall-manager.sh stop
ExecReload=/usr/local/bin/firewall-manager.sh reload

[Install]
WantedBy=basic.target
